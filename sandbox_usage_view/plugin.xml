<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="JavaHelper View"
            icon="icons/full/obj16/sandbox.png"
            category="org.eclipse.jdt.ui.java"
            class="org.sandbox.jdt.ui.helper.views.JavaHelperView"
            id="org.eclipse.jdt.ui.helper.views.JavaHelperView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="JavaHelper View"
            class="org.sandbox.jdt.ui.helper.views.preferences.UsageViewPreferencePage"
            id="org.sandbox.jdt.ui.helper.views.preferences.UsageViewPreferencePage"
            category="org.eclipse.jdt.ui.preferences.JavaBasePreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.sandbox.jdt.ui.helper.views.UsageViewStartup">
      </startup>
   </extension>
  <extension
     point="org.eclipse.ui.bindings">
  <key
        sequence="M2+M3+Q U"
        commandId="org.eclipse.ui.views.showView"
        schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
     <parameter
           id="org.eclipse.ui.views.showView.viewId"
           value="org.eclipse.jdt.ui.helper.views.JavaHelperView">
     </parameter>
  </key>
  </extension>
  <extension
        point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.eclipse.jdt.ui.JavaPerspective">
            <viewShortcut id="org.eclipse.jdt.ui.helper.views.JavaHelperView"/>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <showInPart
               id="org.eclipse.jdt.ui.helper.views.JavaHelperView">
         </showInPart>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaBrowsingPerspective">
         <showInPart
               id="org.eclipse.jdt.ui.helper.views.JavaHelperView">
         </showInPart>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaHierarchyPerspective">
         <showInPart
               id="org.eclipse.jdt.ui.helper.views.JavaHelperView">
         </showInPart>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.debug.ui.DebugPerspective">
         <showInPart
               id="org.eclipse.jdt.ui.helper.views.JavaHelperView">
         </showInPart>
      </perspectiveExtension>
  </extension>
</plugin>
